<h1>Пакеты</h1>

<form class="ui form" id="search-form" method="GET" asp-controller="packages" asp-action="search">
    <div class="fields">
        <div class="field" style="width: 100%">
            <input type="text" 
                name="text"
                placeholder="Название, текст описания, ключевые слова...">
        </div>
        <button class="ui submit button" type="submit">Искать</button>
    </div>
</form>

<table class="ui compact celled table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Актуальная версия</th>
            <th>Адрес репозитория</th>
        </tr>
    </thead>
    <tbody>
    
    @if(@Model != null) {
        @foreach(var pack in @Model) {
            <tr>
                <td><a asp-action="Details" asp-route-id="@pack.Название">@pack.Название</a></td>
                <td>@pack.АктуальнаяВерсия</td>
                <td><a href="@pack.АдресРепозитория">@pack.АдресРепозитория</a></td>
            </tr>
        }
    }
    </tbody>
    
</table>

<div style="margin-top: 3em;">&nbsp;</div>
<h1>Пакеты</h1>

<table class="ui compact celled table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Актуальная версия</th>
            <th>Адрес репозитория</th>
        </tr>
    </thead>
    <tbody>
    
    @if(@Model != null) {
        @foreach(var pack in @Model) {
            <tr>
                <td><a asp-action="Details" asp-route-id="@pack.Название">@pack.Название</a></td>
                <td>@pack.АктуальнаяВерсия?.ВСтроку()</td>
                <td><a href="@pack.АдресРепозитория">@pack.АдресРепозитория</a></td>
            </tr>
        }
    }
    </tbody>
    
</table>

<div style="margin-top: 3em;">&nbsp;</div>